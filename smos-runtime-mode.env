# SmarterOS Runtime Mode Configuration
# Este archivo determina el modo de ejecuci√≥n actual del OS

# Current runtime mode
# Options: development, staging, production
SMOS_MODE=development

# Environment identification
SMOS_ENV=local
SMOS_VERSION=0.1.0
SMOS_CODENAME=Genesis

# Feature flags
SMOS_FEATURE_MULTI_TENANT=true
SMOS_FEATURE_AUTO_BACKUP=true
SMOS_FEATURE_MCP_INTEGRATION=true
SMOS_FEATURE_CODEX_AGENTS=true
SMOS_FEATURE_AI_OBSERVABILITY=false
SMOS_FEATURE_MARKETPLACE=false
SMOS_FEATURE_MULTI_REGION=false

# Debug & Logging
SMOS_DEBUG=true
SMOS_LOG_LEVEL=info
SMOS_LOG_FORMAT=json
SMOS_TRACE_ENABLED=false

# Safety features (por modo)
# development
SMOS_DEV_AUTO_APPROVE=true
SMOS_DEV_REQUIRE_CONFIRMATION=false
SMOS_DEV_ALLOW_DANGEROUS_OPS=true

# staging
SMOS_STAGING_AUTO_APPROVE=false
SMOS_STAGING_REQUIRE_CONFIRMATION=true
SMOS_STAGING_ALLOW_DANGEROUS_OPS=true

# production
SMOS_PROD_AUTO_APPROVE=false
SMOS_PROD_REQUIRE_CONFIRMATION=true
SMOS_PROD_ALLOW_DANGEROUS_OPS=false
SMOS_PROD_BACKUP_BEFORE_DEPLOY=true
SMOS_PROD_HEALTH_CHECK_REQUIRED=true
SMOS_PROD_ROLLBACK_ENABLED=true

# Paths
SMOS_ROOT=/Users/mac/dev/2025
SMOS_SPECS_REPO=/Users/mac/dev/2025/smarteros-specs
SMOS_CODEX_CONFIG=/Users/mac/dev/2025/codex.toml
SMOS_WORKSPACE_FRONT=/Users/mac/dev/2025/front
SMOS_WORKSPACE_BACK=/Users/mac/dev/2025/back
SMOS_WORKSPACE_INFRA=/Users/mac/dev/2025/infra
SMOS_WORKSPACE_TENANTS=/Users/mac/dev/2025/tenants
SMOS_WORKSPACE_SYSTEM=/Users/mac/dev/2025/system

# VPS Connection
SMOS_VPS_HOST=smarteros
SMOS_VPS_IP=89.116.23.167
SMOS_VPS_USER=root
SMOS_VPS_SSH_KEY=~/.ssh/id_rsa

# URLs
SMOS_APP_URL=https://app.smarterbot.cl
SMOS_DASH_URL=https://dash.smarterbot.cl
SMOS_N8N_URL=https://n8n.smarterbot.cl
SMOS_METABASE_URL=https://ai.smarteros.cl
SMOS_STATUS_URL=https://status.smarterbot.cl

# Codex Daemon
SMOS_CODEX_DAEMON_URL=http://127.0.0.1:7777
SMOS_CODEX_DAEMON_ENABLED=true

# Deployment strategy
SMOS_DEPLOY_STRATEGY=blue-green
SMOS_DEPLOY_AUTO_ROLLBACK=true
SMOS_DEPLOY_HEALTH_CHECK_TIMEOUT=300

# Backup
SMOS_BACKUP_ENABLED=true
SMOS_BACKUP_SCHEDULE="0 2 * * *"
SMOS_BACKUP_RETENTION_DAYS=7
SMOS_BACKUP_REMOTE_PATH=/backups

# Notifications
SMOS_NOTIFICATIONS_ENABLED=false
SMOS_NOTIFICATIONS_SLACK_WEBHOOK=
SMOS_NOTIFICATIONS_EMAIL=

# Analytics & Monitoring
SMOS_ANALYTICS_ENABLED=false
SMOS_MONITORING_ENABLED=false
SMOS_SENTRY_ENABLED=false

# Rate limiting
SMOS_RATE_LIMIT_ENABLED=true
SMOS_RATE_LIMIT_MAX_REQUESTS=100
SMOS_RATE_LIMIT_WINDOW=60

# Cache
SMOS_CACHE_ENABLED=true
SMOS_CACHE_TTL=300
SMOS_CACHE_TYPE=memory

# Multi-tenant
SMOS_TENANT_ISOLATION=subdomain
SMOS_TENANT_AUTO_PROVISION=false
SMOS_TENANT_MAX_PER_ACCOUNT=10

# Security
SMOS_SECURITY_REQUIRE_2FA=false
SMOS_SECURITY_SESSION_TIMEOUT=3600
SMOS_SECURITY_ALLOWED_ORIGINS=*
SMOS_SECURITY_CORS_ENABLED=true

# Performance
SMOS_MAX_CONCURRENT_OPERATIONS=5
SMOS_OPERATION_TIMEOUT=300
SMOS_WORKER_THREADS=4

# Updates
SMOS_AUTO_UPDATE=false
SMOS_UPDATE_CHECK_INTERVAL=86400
SMOS_UPDATE_CHANNEL=stable
