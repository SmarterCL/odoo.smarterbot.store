# Botpress License (opcional para desarrollo local)
BP_LICENSE_KEY=

# OpenAI API for RAG embeddings and LLM
OPENAI_API_KEY=sk-...

# Anthropic API (opcional, para Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini API (opcional)
GOOGLE_API_KEY=

# n8n Webhook Integration
N8N_WEBHOOK_URL=http://host.docker.internal:5678/webhook/botpress-action
N8N_HMAC_SECRET=your_hmac_secret_from_vault

# Vault Integration (opcional para local dev)
VAULT_ADDR=http://vault.smarterbot.cl:8200
VAULT_TOKEN=hvs.your_token

# Chatwoot Integration (opcional)
CHATWOOT_BASE_URL=https://chatwoot.smarterbot.cl
CHATWOOT_API_TOKEN=your_chatwoot_token

# MCP Identity (RAG governance)
SMOS_IDENTITY=smarterbotcl@gmail.com
SMOS_HMAC_SECRET=your_mcp_hmac_secret

# Database (no cambiar en sandbox)
DATABASE_URL=postgresql://botpress:botpress_dev_pass@postgres:5432/botpress_dev
REDIS_URL=redis://redis:6379

# Botpress URL (ajustar si cambias puerto)
BOTPRESS_URL=http://localhost:3010

# Production mode (false para sandbox)
BP_PRODUCTION=false

# Duckling NLU (entity extraction)
BP_MODULE_NLU_DUCKLINGURL=http://duckling:8000

# Storage backend (database = PostgreSQL)
BPFS_STORAGE=database
