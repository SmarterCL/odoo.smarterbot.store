{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BotpressTenantConfig",
  "type": "object",
  "required": ["url", "api_key", "bot_id"],
  "properties": {
    "url": {"type": "string", "format": "uri"},
    "api_key": {"type": "string", "minLength": 20},
    "bot_id": {"type": "string", "minLength": 2},
    "workspace_id": {"type": "string"},
    "intent_threshold": {"type": "number", "default": 0.6, "minimum": 0, "maximum": 1},
    "fallback_enabled": {"type": "boolean", "default": true}
  }
}
