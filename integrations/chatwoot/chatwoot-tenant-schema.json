{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ChatwootTenantConfig",
  "type": "object",
  "required": ["base_url", "api_token", "account_id", "inbox_id"],
  "properties": {
    "base_url": {"type": "string", "format": "uri"},
    "api_token": {"type": "string", "minLength": 20},
    "account_id": {"type": "integer", "minimum": 1},
    "inbox_id": {"type": "integer", "minimum": 1},
    "default_language": {"type": "string", "default": "es"},
    "auto_reply_enabled": {"type": "boolean", "default": true},
    "tags": {"type": "array", "items": {"type": "string"}}
  }
}
